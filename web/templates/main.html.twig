{% extends '_base.html.twig' %}
{% block css %}
    <link rel="stylesheet" type="text/css" href="css/slides.css"/>
{% endblock %}
{% block javascript %}
    <script src="js/slides.js"></script>
    <script>
        $(function () {
            $("#slides").slides({
                responsive: true
            });
        });
        $("document").ready(function () {
            $("#slides").slides("play");
        });
    </script>
{% endblock %}

{% block title %}  {{ title }}  {% endblock %}

{% block content %}
    <div id="slides">
        <img src="/img/slide-1.jpg">
        <img src="/img/slide-2.jpg">
        <img src="/img/slide-3.jpg">
        <img src="/img/slide-4.jpg">
    </div>
    <div class="spacer"></div>

    <table class="main__page__frame">
        <tr>
            <td width=30%  valign="top">

                <div class="section__title">Деятельность</div>

                <div class="activity__item">
                    <img src="/img/main/ship.png" alt="" class="inline activity__icon"/>

                    <div class="inline activity__text">
                        Техническое сопровождение проектов при постройке
                    </div>
                </div>
                <div class="activity__item">
                    <img src="/img/main/propeller.png" alt="" class="inline activity__icon"/>

                    <div class="inline activity__text">
                        Разработка приемо-сдаточной и эксплуатационной документации

                    </div>
                </div>
                <div class="activity__item">
                    <img src="/img/main/gear.png" alt="" class="inline activity__icon"/>

                    <div class="inline activity__text">
                        Рабочая конструкторская документация машиностро- ительного производства.
                    </div>
                </div>
                <div class="activity__item">
                    <img src="/img/main/ship.png" alt="" class="inline activity__icon"/>

                    <div class="inline activity__text">
                        Разработка машиностроительных чертежей и документов.
                    </div>
                </div>

                <div class="section__title">Технологии</div>
                <div class="tech__item"><img src="/img/main/cadmatic_logo.png"></div>
                <div class="tech__item"><img src="/img/main/nestix_logo.png"></div>
                <div class="tech__item"><img src="/img/main/aveva_logo.png"></div>
                <div class="tech__item" style="margin-left: 60px;"><img src="/img/main/napa_logo.png"></div>
            </td>
            <td  valign="top" style="padding-left: 20px;" >
