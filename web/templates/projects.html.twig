{% extends '_base.html.twig' %}

{% block css %}
    <style>
        .projects__table td {
            margin: 3px;
            border-bottom: 1px solid #888888;
            height: 40px;
        }

        .year {
            width: 50px;
            text-align: center;
        }

        .vendor {
            width: 350px;
            text-align: left;
        }

        .country {
            width: 150px;
            text-align: center;
        }

        .number {
            width: 180px;
            text-align: center;
        }

        .type {
            width: 250px;
            text-align: center;
        }

        .work {
            width: 200px;
            text-align: center;
        }

        .finished {
            background-color: rgba(150, 255, 150, 0.27);
        }

        .recent__project {
            margin: 10px;
            display: inline-block;
            width: 450px;
            position: relative;
        }

        .recent__project img {
            width: 450px;
        }

        .project__title {
            padding: 3px;
            font-size: 10pt;
            color: #eeeeee;
            width: 100%;
            background-color: rgba(28, 110, 133, 0.75);
            position: absolute;
            bottom: 0;

        }
    </style>

{% endblock %}

{% block javascript %}
{% endblock %}

{% block title %}  {{ title }}  {% endblock %}

{% block content %}

    <div class="section__title">Суда разработанные при полном или частичном участии ПКБ «Петробалт»</div>

    <div class="recent__project">
        <img src="img/projects/ships/22120.jpg" alt=""/>

        <div class="project__title">Проект 22120. Патрульное судно ледового класса.</div>
    </div>

    <div class="recent__project">
        <img src="img/projects/ships/sds08.jpg" alt=""/>
        <div class="project__title">Проект SDS08. Морское водолазное судно.</div>
    </div>

    <div class="recent__project">
        <img src="img/projects/ships/1293.jpg" alt=""/>
        <div class="project__title">Проект 1293. Автомобильно-пассажирский паром.</div>
    </div>

    <div class="recent__project">
        <img src="img/projects/ships/rst25.jpg" alt=""/>
        <div class="project__title">Проект RST 25. Танкер.</div>
    </div>

    <div class="section__title">Перечень основных проектов судов разработки ООО ПКБ «Петробалт»"</div>

    {#<p>Рабочая конструкторская документация (РКД)</p>#}
    {#<p>Плазово - технологическая документация (ПТД)</p>#}
    {#<p>Приемо-сдаточная документация (ПСД)</p>#}
    {#<p>Эксплуатационная документация (ЭД)</p>#}
    {#<p>Классификационный проект (КП)</p>#}

    <table class="projects__table">
        <tr>
            <th class="year">Год
            </th>
            <th class="vendor">Заказчик проекта
            </th>
            <th class="country">Страна
            </th>
            <th class="number">№ проекта / судна

            </th>
            <th class="type">Тип судна
            </th>
            {#<th class="work">Вид выполненных работ#}
            {#</th>#}
            {#<th class="finished">В полном объеме- *</td>#}
        </tr>
        {% for project in projects %}
            <tr class="{% if("*"==project[6]) %}  {% endif %}">
                <td class="year">{{ project[0] }}</td>
                <td class="vendor">{{ project[1] }}</td>
                <td class="country">{{ project[2] }}</td>
                <td class="number">{{ project[3] }}</td>
                <td class="type">{{ project[4] }}</td>
                {#<td class="work">{{ project[5] }}#}
                    {#{%   if ('ed' in project[5]) %}  <img src="img/projects/ed.png" alt="ed"> {% endif %}#}
                    {#{%   if ('psd' in project[5]) %} <img src="img/projects/psd.png" alt="psd"> {% endif %}#}
                    {#{%   if ('ptd' in project[5]) %} <img src="img/projects/ptd.png" alt="ptd"> {% endif %}#}
                    {#{%   if ('rkd' in project[5]) %} <img src="img/projects/rkd.png" alt="rkd"> {% endif %}#}
                    {#{%   if ('td' in project[5]) %}  <img src="img/projects/td.png" alt="td"> {% endif %}#}
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}