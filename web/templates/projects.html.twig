{% extends '_base.html.twig' %}

{% block css %}
    <style>
        .year {
            width: 50px;
            text-align: center;
        }
        .vendor {
            width: 200px;
            text-align: center;
        }
        .country {
            width: 50px;
            text-align: center;
        }
        .number {
            width: 50px;
            text-align: center;
        }
        .type {
            width: 50px;
            text-align: center;
        }
        .work {
            width: 50px;
            text-align: center;
        }
        .finished {
            width: 50px;
            text-align: center;
        }
    </style>

{% endblock %}

{% block javascript %}
{% endblock %}

{% block title %}  {{ title }}  {% endblock %}

{% block content %}

    <table border="1" width="100%">

        {% for project in projects %}
            <tr>
                <td class="year">{{ project[0] }}</td>
                <td class="vendor">{{ project[1] }}</td>
                <td class="country">{{ project[2] }}</td>
                <td class="number">{{ project[3] }}</td>
                <td class="type">{{ project[4] }}</td>
                <td class="work">{{ project[5] }}</td>
                <td class="finished">{{ project[6] }}</td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}